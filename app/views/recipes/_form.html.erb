<%= form_with model: @recipe do |form| %>
 <h2>Welcome little chef, add a new recipe</h2>
<div class="form-locaton">
  <%= form.text_field :name, placeholder: "Name", class:'form-control' %>
</div>

<div class="form-locaton">
    <%= form.number_field :preparation_time, placeholder: "Preparation time", class:'form-control' %>
</div>

<div class="form-locaton">
    <%= form.number_field :cooking_time, placeholder: "Cooking time", class:'form-control' %>
  </div>

<div class="form-locaton">
    <%= form.text_area :description, required: true, placeholder: "Description", class:'form-control'%>
</div>

<div class="form-locaton check-box">
    <%= form.label :public, class: "form-label-checkbox"%>
    <%= form.check_box :public %>
</div>

 <div class="form-locaton">
    <%= form.submit "Add", class:'add-recipe-btn' %>
</div>

<% end %>